{{!--Dashboard--}} 

<section class="dashboard">
  <h2>Find New Pokemon</h2>
  <form class="new-pokemon-form">
    <div>
      <label for="title">Name of Pokemon</label>
      <input type="text" id="name" name="name" placeholder="Name" />
    </div>
    <div>
      <label for="front_default"></label>
      <input id="front_default" name="front_default">
      <input id="height" name="height" placeholder="Height"/>
      <input id="weight" name="weight" placeholder="Weight"/>
      <input id="entry_number" name="entry_number" placeholder="Entry Number"/>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if pocketmonsters.length}}
<section>
  <h2>Your Pokemon</h2>
  <ol style="list-style-type:none;">
    {{#each pocketmonsters as |post|}}
    <li style="list-style-type:none;">
      {{> pokemon-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit pokemon</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-pokemon.js"></script>
