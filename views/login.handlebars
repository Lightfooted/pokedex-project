<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form class="signup-form" action="#">
			<h1>Create Account</h1>
			<span>Join the Pokémon Trainer Club!</span>
			<input id="username-signup" type="text" placeholder="Name" />
			<input id="email-signup" type="email" placeholder="Email" />
			<input id="password-signup" type="password" placeholder="Password" />
			<button class="signup-button" >Create Account</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form class="login-form" action="#">
			<h1>Sign In</h1>
			<input id="email-login" type="email" placeholder="Email" />
			<input id="password-login" type="password" placeholder="Password" />
			<button class="login-button" >Sign In</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome, Trainer!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Trainer!</h1>
				<p>Enter your personal details and join the Pokémon Trainer Club today!</p>
				<button class="ghost" id="signUp">Create Account</button>
			</div>
		</div>
	</div>
</div>
